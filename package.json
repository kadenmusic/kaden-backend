{
  "name": "melogram",
  "version": "0.0.1",
  "description": "Melogram - Daily Music Sharing",
  "engines": {
    "node": "20.x || 18.x || 16.x"
  },
  "main": "./dist/server.js",
  "type": "module",
  "scripts": {
    "start": "ts-node dist/server.js",
    "start-worker": "ts-node dist/worker.js",
    "build": "tsc -p .",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
    "test": "jest --ci --testResultsProcessor=\"jest-junit\"",
    "push-image": "heroku container:push web -a melogram",
    "release-image": "heroku container:release web -a melogram",
    "pgweb-local": "pgweb --url postgres://username:password@localhost:5435/database-name?sslmode=disable",
    "pgweb-prod": "heroku config:get DATABASE_URL -a melogram | xargs pgweb --url",
    "seed-db": "node --loader ts-node/esm ./prisma/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.8.1",
    "@prisma/client": "^5.0.0",
    "@sentry/node": "^7.60.1",
    "body-parser": "^1.20.2",
    "bull": "^4.10.4",
    "cool-ascii-faces": "^1.3.4",
    "cors": "^2.8.5",
    "ejs": "^3.1.5",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "pg": "^8.11.1",
    "throng": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.3",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "got": "^11.3.0",
    "jest": "^29.6.1",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "prettier": "3.0.0",
    "prisma": "^5.0.0",
    "tape": "^4.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heroku/melogram"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT"
}
